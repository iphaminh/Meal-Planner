<div class="jass-row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="jass-row mt-4">
  <div class="col-md-6">
    <h3>Create Meal Plan:</h3>  

  <form class="form new-meal-form">
      <div class="form-group">
        <label for="project-name">Meal Name:</label>
        <input class="form-input" type="text" id="meal-name" name="meal-name" />
      </div>
      <div class="form-group">
        {{!-- <label for="meal-plan">Day of the Week</label> --}}
        <label for="day-of-week">Select a Day of the Week:</label>
          <select class="form-input" id="day-of-week" name="day-of-week">
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
          </select>
        {{!-- <input class="form-input" type="number" id="meal-plan" name="meal-plan" /> --}}
      </div>
      <div class="form-group">
        <label for="project-desc">Recipe:</label>
        <textarea class="form-input" id="meal-desc" name="meal-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn-large">Create</button>
      </div>
    </form>
    </div>  

{{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Meal Plans:</h3>

    {{#each projects as |project|}}
    <div class="jass-rowmb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}" class="meal-link" data-meal="{{project.recipe}}">{{project.meal_name}}</a></h4>
        <p>Day: {{project.day_of_week}}</p>
        <p>Recipe: {{project.recipe}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn-small" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
{{/if}}

</div>

<script src="./js/profile.js"></script>
 <script type="text/javascript" src="js/materialize.min.js"></script>